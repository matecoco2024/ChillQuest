model User {
  id       String  @id @default(cuid())
  email    String  @unique
  password String
  name     String?
  trips    Trip[]
}

model Trip {
  id        String     @id @default(cuid())
  user      User       @relation(fields: [userId], references: [id])
  userId    String
  startDate DateTime
  endDate   DateTime?
  locations Location[]
}

model Location {
  id       String       @id @default(cuid())
  name     String
  date     DateTime
  cost     Float?       // Cost estimation (personalized)
  rating   Int?         // Rating (1-5 stars)
  category TripCategory // Suggested trip category
  trip     Trip         @relation(fields: [tripId], references: [id])
  tripId   String
}

